{
  "description": "WPF Dev Pack hooks - WPF keyword detection, XAML validation, and code formatting (C# file-based apps, .NET 10 required)",
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "dotnet run \"${CLAUDE_PLUGIN_ROOT}/hooks/WpfKeywordDetector.cs\"",
            "timeout": 10
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "dotnet run \"${CLAUDE_PLUGIN_ROOT}/hooks/XamlValidator.cs\"",
            "timeout": 15
          },
          {
            "type": "command",
            "command": "dotnet run \"${CLAUDE_PLUGIN_ROOT}/hooks/CodeFormatter.cs\"",
            "timeout": 45
          }
        ]
      }
    ]
  }
}
